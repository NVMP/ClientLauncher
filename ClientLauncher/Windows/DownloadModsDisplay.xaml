<Window x:Class="ClientLauncher.Windows.DownloadModsDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientLauncher"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d" Height="312.25" Width="576.5"
        Background="#FF1A1A1A"
        ResizeMode="NoResize"
        Icon="/Res/nvmp-logo-32x32.png"
        WindowStartupLocation="CenterScreen"
        Title="NV:MP - Mod Dependencies">
    <Window.Resources>

        <Style x:Key="ButtonGrey">
            <Setter Property="Control.Background" Value="#FF212121"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.BorderBrush" Value="#FF323232"/>

            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                    <Setter Property="Control.Background" Value="#FF515151"/>
                </Trigger>
                <Trigger Property="UIElement.IsEnabled" Value="False">
                    <Setter Property="Control.Foreground" Value="#FF515151"/>
                    <Setter Property="Control.Background" Value="#FF2B2B2B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid Margin="0,0,0,63.333">
        <Label Content="This server requires the following DLC or mods installed:" Margin="5,13,0,0" VerticalAlignment="Top" Height="26" Foreground="White" Width="330" HorizontalAlignment="Left" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5">
        </Label>
        <Grid VerticalAlignment="Top" Margin="0,46,10,0" Height="27">
            <Label Padding="5px" Background="Transparent" Foreground="White" HorizontalAlignment="Right" Width="54" Margin="0,0,482,0">Filepath</Label>
            <Label Padding="5px" Background="Transparent" Foreground="White" Margin="450,0,0,0">State</Label>
        </Grid>

        <ListBox x:Name="ModsList" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"
                 Margin="16,69,16,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="Auto" Margin="0px 0px 0px 0px">
                        <TextBox VerticalAlignment="Center" Background="Transparent" Foreground="White" HorizontalAlignment="Left" Width="450" BorderThickness="0"  Text="{Binding FilePath}"
                               TextWrapping="WrapWithOverflow" IsReadOnly="True" IsEnabled="False"/>
                        <StackPanel Orientation="Horizontal" Margin="430,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Transparent" Width="80">
                            <!-- states -->
                            <Image Visibility="{Binding IsDownloadedVis}"
                                               Source="/Res/downloadsuccess.png" Width="25" Height="25" HorizontalAlignment="Left"
                                               ToolTip="Ready"/>
                            <Image Visibility="{Binding IsDownloadableVis}"
                                               Source="/Res/downloadable.png" Width="25" Height="25" HorizontalAlignment="Left"
                                               ToolTip="Download required"/>
                            <Label Visibility="{Binding IsDownloadableVis}"
                                   Content="{Binding FileSizeMBText}"
                                   Foreground="White"
                                   />
                            <Image Visibility="{Binding NotDownloadableVis}"
                                               Source="/Res/downloaderror.png" Width="25" Height="25" HorizontalAlignment="Left"
                                               ToolTip="Not Downloadable"/>
                            <Image Visibility="{Binding IsDownloadingVis}"
                                               gif:ImageBehavior.AnimatedSource="/Res/loading.gif" Width="25" Height="25" HorizontalAlignment="Left"
                                               ToolTip="Processing"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="Cancel" Click="Cancel_Click" Content="Cancel"  UseLayoutRounding="False" VerticalContentAlignment="Center" Height="26" VerticalAlignment="Bottom" Margin="10,0,0,-51.57" HorizontalAlignment="Left" Width="69.188" Style="{DynamicResource ButtonGrey}"/>
        <Button x:Name="Install_All" Click="Install_All_Click" Content="Install all and join"  UseLayoutRounding="False" VerticalContentAlignment="Center" Height="26" VerticalAlignment="Bottom" Margin="438,0,0,-52.236" HorizontalAlignment="Left" Width="116.188" Style="{DynamicResource ButtonGrey}"/>
    </Grid>
</Window>
